<view class="page">
  <!-- 自定义导航栏 -->
  <view class="custom-nav" style="padding-top: {{statusBarHeight}}px">
    <view class="nav-content">
      <view class="back-button" bindtap="onBackTap">
        <text class="back-icon">←</text>
      </view>
      <text class="nav-title">关于读书笔记</text>
      <view class="placeholder"></view>
    </view>
  </view>

  <!-- 应用信息 -->
  <view class="app-info">
    <image class="app-logo" src="/assets/images/logo.png" mode="aspectFit"></image>
    <view class="app-name">读书笔记</view>
    <view class="app-version">v{{version}}</view>
  </view>

  <!-- 功能介绍 -->
  <view class="feature-list">
    <view class="feature-item">
      <view class="feature-icon">📚</view>
      <view class="feature-content">
        <view class="feature-title">图书管理</view>
        <view class="feature-desc">轻松管理你的阅读书籍，记录阅读进度</view>
      </view>
    </view>
    <view class="feature-item">
      <view class="feature-icon">📝</view>
      <view class="feature-content">
        <view class="feature-title">笔记记录</view>
        <view class="feature-desc">支持文字和语音笔记，随时记录读书感悟</view>
      </view>
    </view>
    <view class="feature-item">
      <view class="feature-icon">📊</view>
      <view class="feature-content">
        <view class="feature-title">阅读统计</view>
        <view class="feature-desc">直观展示你的阅读数据和成长轨迹</view>
      </view>
    </view>
    <view class="feature-item">
      <view class="feature-icon">🔒</view>
      <view class="feature-content">
        <view class="feature-title">数据安全</view>
        <view class="feature-desc">支持数据备份，确保笔记安全存储</view>
      </view>
    </view>
  </view>

  <!-- 开发信息 -->
  <view class="dev-info">
    <view class="info-item">
      <text class="info-label">开发者</text>
      <text class="info-value">孺牛异人</text>
    </view>
    <view class="info-item">
      <text class="info-label">技术支持</text>
      <text class="info-value">微信小程序</text>
    </view>
    <view class="info-item">
      <text class="info-label">更新时间</text>
      <text class="info-value">{{updateTime}}</text>
    </view>
  </view>

  <!-- 版权信息 -->
  <view class="copyright">
    <text>Copyright © {{currentYear}} 读书笔记</text>
    <text>All Rights Reserved</text>
  </view>
</view> 