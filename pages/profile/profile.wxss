/* pages/profile/profile.wxss */
.page {
  min-height: 100vh;
  background: #f8f9fa;
  padding: calc(env(safe-area-inset-top) + 100rpx) 34rpx
    calc(68rpx + env(safe-area-inset-bottom));
}

/* 用户信息区域 */
.user-section {
  background: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.avatar-wrap {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f0f0f0;
}

.edit-avatar {
  position: absolute;
  right: -6rpx;
  bottom: -6rpx;
  width: 40rpx;
  height: 40rpx;
  background: #4a90e2;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
}

.edit-icon {
  font-size: 24rpx;
  color: #fff;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.user-desc {
  font-size: 26rpx;
  color: #999;
}

/* 统计信息 */
.stats-section {
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 功能列表 */
.feature-list {
  padding: 30rpx 0;
}

.feature-group {
  margin-bottom: 20rpx;
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.feature-group.settings-group {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 20rpx solid #f8f9fa; /* 使用与页面背景色相同的颜色 */
}

.feature-group:last-child {
  margin-bottom: 0;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  background: #fff;
  position: relative;
}

.feature-item:active {
  background: rgba(0, 0, 0, 0.02);
}

.feature-item::after {
  content: "";
  position: absolute;
  left: 90rpx; /* 从图标右侧开始 */
  right: 30rpx;
  bottom: 0;
  height: 1px;
  background: #f5f5f5;
  transform: scaleY(0.5);
}

.feature-item:last-child::after {
  display: none;
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
  opacity: 0.9;
}

.feature-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}

.feature-arrow {
  font-size: 28rpx;
  color: #bbb;
  margin-left: 12rpx;
}
